/* ---- CSS ÂèòÈáè ---- */
:root {
  /* ‰∏ªËâ≤Ë∞É - ËìùËâ≤ÁßëÊäÄÊ∏êÂèò */
  --primary-gradient: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 50%, #06b6d4 100%);
  --primary-blue: #3b82f6;
  --primary-dark: #1e3a8a;
  --primary-light: #60a5fa;
  --accent-cyan: #06b6d4;
  
  /* ËÉåÊôØËâ≤ */
  --bg-primary: #f8fafc;
  --bg-card: #ffffff;
  --bg-dark: #0f172a;
  
  /* ÊñáÂ≠óËâ≤ */
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --text-light: #94a3b8;
  --text-white: #ffffff;
  
  /* ËæπÊ°ÜÂíåÈò¥ÂΩ± */
  --border-color: #e2e8f0;
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
  
  /* ÂúÜËßí */
  --radius-sm: 6px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 24px;
  
  /* Èó¥Ë∑ù */
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
  --spacing-2xl: 48px;
  
  /* Â≠ó‰Ωì */
  --font-family: 'Noto Sans SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-size-sm: 14px;
  --font-size-base: 16px;
  --font-size-lg: 18px;
  --font-size-xl: 24px;
  --font-size-2xl: 32px;
  --font-size-3xl: 48px;
}

/* ---- ÈáçÁΩÆÊ†∑Âºè ---- */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-family);
  font-size: var(--font-size-base);
  line-height: 1.6;
  color: var(--text-primary);
  background-color: var(--bg-primary);
  min-height: 100vh;
}

a {
  color: inherit;
  text-decoration: none;
  transition: color 0.2s ease;
}

a:hover {
  color: var(--primary-blue);
}

img {
  max-width: 100%;
  height: auto;
}

/* ---- ÂØºËà™Ê†è ---- */
.site-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid var(--border-color);
}

.header-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo a {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-weight: 700;
  font-size: var(--font-size-lg);
}

.logo-icon {
  font-size: 28px;
}

.logo-text {
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.main-nav {
  display: flex;
  gap: var(--spacing-xl);
}

.nav-link {
  font-weight: 500;
  color: var(--text-secondary);
  padding: var(--spacing-sm) 0;
  position: relative;
}

.nav-link:hover {
  color: var(--primary-blue);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--primary-gradient);
  transition: width 0.3s ease;
}

.nav-link:hover::after {
  width: 100%;
}

.search-btn {
  background: none;
  border: none;
  cursor: pointer;
  padding: var(--spacing-sm);
  color: var(--text-secondary);
  border-radius: var(--radius-sm);
  transition: all 0.2s ease;
}

.search-btn:hover {
  background: var(--bg-primary);
  color: var(--primary-blue);
}

/* ---- Hero Âå∫Âüü ---- */
.hero-section {
  background: var(--primary-gradient);
  padding: var(--spacing-2xl) 0;
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
}

.hero-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-2xl);
  position: relative;
}

.hero-content {
  flex: 1;
  color: var(--text-white);
}

.hero-title {
  font-size: clamp(32px, 5vw, 56px);
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.hero-subtitle {
  font-size: var(--font-size-lg);
  opacity: 0.9;
  margin-bottom: var(--spacing-xl);
  max-width: 500px;
}

.hero-search {
  display: flex;
  max-width: 480px;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(8px);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xs);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.search-input {
  flex: 1;
  background: none;
  border: none;
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--font-size-base);
  color: var(--text-white);
  outline: none;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-submit {
  background: var(--text-white);
  border: none;
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-lg);
  cursor: pointer;
  color: var(--primary-blue);
  transition: all 0.2s ease;
}

.search-submit:hover {
  transform: scale(1.05);
  box-shadow: var(--shadow-md);
}

.hero-image {
  flex: 0 0 400px;
  display: flex;
  justify-content: center;
}

.hero-image img {
  max-width: 100%;
  filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

/* ---- ÈÄöÁî®ÂÆπÂô® ---- */
.section-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
}

.main-content {
  min-height: calc(100vh - 200px);
}

/* ---- ÂàÜÁ±ªÊ†áÁ≠æ ---- */
.tools-section {
  padding: var(--spacing-2xl) 0;
}

.category-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  justify-content: center;
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-md);
  background: var(--bg-card);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

.tab-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: none;
  border: none;
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--text-secondary);
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: all 0.2s ease;
}

.tab-btn:hover {
  background: var(--bg-primary);
  color: var(--primary-blue);
}

.tab-btn.active {
  background: var(--primary-gradient);
  color: var(--text-white);
}

.tab-icon {
  font-size: 18px;
}

/* ---- Â∑•ÂÖ∑Âç°ÁâáÁΩëÊ†º ---- */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: var(--spacing-lg);
}

.tool-card {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  background: var(--bg-card);
  padding: var(--spacing-lg);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
  cursor: pointer;
}

.tool-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-light);
}

.tool-icon {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.tool-info {
  flex: 1;
  min-width: 0;
}

.tool-name {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.tool-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tool-link {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-gradient);
  border-radius: 50%;
  color: var(--text-white);
  flex-shrink: 0;
  transition: transform 0.2s ease;
}

.tool-link:hover {
  transform: scale(1.1);
}

/* ---- ÂçöÂÆ¢Âå∫Âüü ---- */
.blog-section {
  padding: var(--spacing-2xl) 0;
  background: var(--bg-card);
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: 700;
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.article-count {
  font-size: var(--font-size-base);
  font-weight: 400;
  color: var(--text-secondary);
}

/* Âä†ËΩΩÊõ¥Â§ö */
.load-more-container {
  text-align: center;
  margin-top: var(--spacing-xl);
  padding: var(--spacing-lg) 0;
}

.load-more-btn {
  background: var(--primary-gradient);
  color: var(--text-white);
  border: none;
  padding: var(--spacing-md) var(--spacing-2xl);
  font-size: var(--font-size-base);
  font-weight: 500;
  border-radius: var(--radius-xl);
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-md);
}

.load-more-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.load-more-btn:active {
  transform: translateY(0);
}

.load-status {
  margin-top: var(--spacing-md);
  font-size: var(--font-size-sm);
  color: var(--text-light);
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: var(--spacing-lg);
}

.blog-card {
  background: var(--bg-primary);
  padding: var(--spacing-lg);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
}

.blog-card:hover {
  box-shadow: var(--shadow-md);
  border-color: var(--primary-light);
}

.blog-meta {
  font-size: var(--font-size-sm);
  color: var(--text-light);
  margin-bottom: var(--spacing-sm);
}

.blog-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  line-height: 1.4;
}

.blog-title a:hover {
  color: var(--primary-blue);
}

.blog-excerpt {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-md);
  line-height: 1.6;
}

.read-more {
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--primary-blue);
}

.read-more:hover {
  text-decoration: underline;
}

/* ---- ÊñáÁ´†ËØ¶ÊÉÖ ---- */
.post-detail, .page-detail {
  max-width: 800px;
  margin: 0 auto;
  padding: var(--spacing-2xl) var(--spacing-lg);
}

.post-header, .page-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.post-title, .page-title {
  font-size: var(--font-size-2xl);
  font-weight: 700;
  margin-bottom: var(--spacing-md);
}

.post-meta {
  display: flex;
  justify-content: center;
  gap: var(--spacing-lg);
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

.post-content, .page-content {
  line-height: 1.8;
}

.post-content h2, .post-content h3 {
  margin-top: var(--spacing-xl);
  margin-bottom: var(--spacing-md);
}

.post-content p {
  margin-bottom: var(--spacing-md);
}

.post-content code {
  background: var(--bg-primary);
  padding: 2px 6px;
  border-radius: var(--radius-sm);
  font-size: 0.9em;
}

.post-content pre {
  background: var(--bg-dark);
  color: var(--text-white);
  padding: var(--spacing-lg);
  border-radius: var(--radius-md);
  overflow-x: auto;
  margin: var(--spacing-lg) 0;
}

.post-content pre code {
  background: none;
  padding: 0;
}

.post-tags {
  margin-top: var(--spacing-xl);
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--border-color);
}

.tag {
  display: inline-block;
  background: var(--bg-primary);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-sm);
  margin-right: var(--spacing-sm);
}

.tag:hover {
  background: var(--primary-blue);
  color: var(--text-white);
}

.post-nav {
  display: flex;
  justify-content: space-between;
  margin-top: var(--spacing-xl);
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--border-color);
}

.prev-post, .next-post {
  color: var(--primary-blue);
  font-weight: 500;
}

/* ---- ÂΩíÊ°£È°µ ---- */
.archive-section {
  padding: var(--spacing-2xl) 0;
}

.archive-title {
  font-size: var(--font-size-2xl);
  font-weight: 700;
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.archive-year {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--primary-blue);
  margin: var(--spacing-xl) 0 var(--spacing-md);
}

.archive-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.archive-item {
  display: flex;
  gap: var(--spacing-lg);
  padding: var(--spacing-md);
  background: var(--bg-card);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-color);
}

.archive-item time {
  color: var(--text-light);
  font-size: var(--font-size-sm);
  flex-shrink: 0;
}

.archive-item a:hover {
  color: var(--primary-blue);
}

/* ---- È°µËÑö ---- */
.site-footer {
  background: var(--bg-dark);
  color: var(--text-light);
  padding: var(--spacing-xl) 0;
  text-align: center;
}

.footer-info p {
  margin-bottom: var(--spacing-sm);
}

.footer-info a {
  color: var(--primary-light);
}

.footer-info a:hover {
  color: var(--text-white);
}

/* ---- ÂìçÂ∫îÂºèÂ∏ÉÂ±Ä ---- */
@media (max-width: 768px) {
  .header-container {
    padding: 0 var(--spacing-md);
  }
  
  .main-nav {
    display: none;
  }
  
  .hero-container {
    flex-direction: column;
    text-align: center;
  }
  
  .hero-content {
    align-items: center;
  }
  
  .hero-subtitle {
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero-search {
    width: 100%;
  }
  
  .hero-image {
    flex: 0 0 auto;
    max-width: 300px;
  }
  
  .category-tabs {
    justify-content: flex-start;
    overflow-x: auto;
    flex-wrap: nowrap;
    padding: var(--spacing-sm);
  }
  
  .tab-btn {
    flex-shrink: 0;
  }
  
  .tools-grid {
    grid-template-columns: 1fr;
  }
  
  .blog-grid {
    grid-template-columns: 1fr;
  }
}

/* ---- Â∑•ÂÖ∑Â±ïÁ§∫È°µ ---- */
.tools-page {
  padding: var(--spacing-2xl) 0;
}

.tools-page-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
}

.tools-page-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.tools-page-title {
  font-size: var(--font-size-3xl);
  font-weight: 700;
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: var(--spacing-md);
}

.tools-page-subtitle {
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
}

.tools-filter {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  justify-content: center;
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-md);
  background: var(--bg-card);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

.filter-btn {
  background: none;
  border: none;
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--text-secondary);
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: all 0.2s ease;
}

.filter-btn:hover {
  background: var(--bg-primary);
  color: var(--primary-blue);
}

.filter-btn.active {
  background: var(--primary-gradient);
  color: var(--text-white);
}

.tools-showcase-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

.tool-showcase-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
}

.tool-showcase-card:hover {
  transform: translateY(-6px);
  box-shadow: var(--shadow-xl);
  border-color: var(--primary-light);
}

.card-link {
  display: block;
  color: inherit;
}

.card-cover {
  width: 100%;
  height: 160px;
  overflow: hidden;
  background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
}

.card-cover img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.tool-showcase-card:hover .card-cover img {
  transform: scale(1.05);
}

.card-content {
  padding: var(--spacing-lg);
  position: relative;
}

.card-logo {
  position: absolute;
  top: -24px;
  left: var(--spacing-lg);
  width: 48px;
  height: 48px;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  box-shadow: var(--shadow-md);
  border: 2px solid var(--bg-card);
}

.card-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--text-primary);
  margin-top: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.card-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  min-height: 42px;
}

.card-category {
  display: inline-block;
  margin-top: var(--spacing-md);
  padding: var(--spacing-xs) var(--spacing-sm);
  background: linear-gradient(135deg, #ede9fe 0%, #dbeafe 100%);
  color: var(--primary-blue);
  font-size: 12px;
  font-weight: 500;
  border-radius: var(--radius-sm);
}

.no-tools {
  text-align: center;
  color: var(--text-light);
  padding: var(--spacing-2xl);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 768px) {
  .tools-showcase-grid {
    grid-template-columns: 1fr;
  }
  
  .tools-filter {
    overflow-x: auto;
    flex-wrap: nowrap;
    justify-content: flex-start;
  }
  
  .filter-btn {
    flex-shrink: 0;
  }
}


