<article class="tool-card">
    <div class="tool-icon">
        <%= tool.icon %>
    </div>
    <div class="tool-info">
        <h3 class="tool-name">
            <%= tool.name %>
        </h3>
        <p class="tool-desc">
            <%= tool.desc %>
        </p>
    </div>
    <a href="<%= tool.url %>" class="tool-link" target="_blank" rel="noopener">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17" />
        </svg>
    </a>
</article>