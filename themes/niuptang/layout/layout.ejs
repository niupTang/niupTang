<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Basic SEO -->
    <meta name="description" content="<%= page.description || page.excerpt || config.description %>">
    <meta name="keywords"
        content="<%= page.tags && page.tags.length > 0 ? page.tags.map(tag => tag.name).join(',') : 'AI工具,人工智能,ChatGPT,AI导航,开源项目,技术博客' %>">
    <meta name="author" content="<%= config.author || '太阳鸟' %>">

    <!-- Title -->
    <title>
        <%= page.title ? page.title + ' | ' + config.title : config.title %>
    </title>

    <!-- Canonical URL -->
    <link rel="canonical" href="<%= page.permalink || config.url %>">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="<%= page.layout === 'post' ? 'article' : 'website' %>">
    <meta property="og:url" content="<%= page.permalink || config.url %>">
    <meta property="og:title" content="<%= page.title || config.title %>">
    <meta property="og:description" content="<%= page.description || page.excerpt || config.description %>">
    <meta property="og:image" content="<%= page.thumbnail || config.url + '/images/og-image.jpg' %>">
    <meta property="og:site_name" content="<%= config.title %>">
    <meta property="og:locale" content="zh_CN">
    <% if (page.layout==='post' ) { %>
        <meta property="article:published_time" content="<%= date(page.date, 'YYYY-MM-DD') %>">
        <% if (page.updated) { %>
            <meta property="article:modified_time" content="<%= date(page.updated, 'YYYY-MM-DD') %>">
            <% } %>
                <meta property="article:author" content="<%= config.author || '太阳鸟' %>">
                <% if (page.tags && page.tags.length> 0) { %>
                    <% page.tags.forEach(function(tag) { %>
                        <meta property="article:tag" content="<%= tag.name %>">
                        <% }); %>
                            <% } %>
                                <% } %>

                                    <!-- Twitter Card -->
                                    <meta name="twitter:card" content="summary_large_image">
                                    <meta name="twitter:url" content="<%= page.permalink || config.url %>">
                                    <meta name="twitter:title" content="<%= page.title || config.title %>">
                                    <meta name="twitter:description"
                                        content="<%= page.description || page.excerpt || config.description %>">
                                    <meta name="twitter:image"
                                        content="<%= page.thumbnail || config.url + '/images/og-image.jpg' %>">
                                    <meta name="twitter:creator" content="@niupTang">

                                    <!-- Favicon -->
                                    <link rel="icon" type="image/jpeg" href="<%- url_for('/images/favicon.jpg') %>">
                                    <link rel="apple-touch-icon" href="<%- url_for('/images/favicon.jpg') %>">

                                    <!-- Google Fonts -->
                                    <link rel="preconnect" href="https://fonts.googleapis.com">
                                    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
                                    <link
                                        href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;500;600;700&display=swap"
                                        rel="stylesheet">

                                    <!-- Structured Data (JSON-LD) -->
                                    <%- partial('_partial/structured-data') %>

                                        <!-- Styles -->
                                        <%- css('css/style') %>
</head>

<body>
    <%- partial('_partial/header') %>

        <main class="main-content">
            <%- body %>
        </main>

        <%- partial('_partial/footer') %>

            <%- js('js/main') %>
</body>

</html>