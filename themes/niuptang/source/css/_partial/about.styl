// UI/UX Pro Max: Minimalist About Page
.about-page
  max-width: 800px
  margin: 0 auto
  padding: 4rem 1.5rem
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif

.about-container
  background: #ffffff
  // Removed heavy shadow for a flatter, cleaner look
  // border: 1px solid rgba(0, 0, 0, 0.05)
  // border-radius: 2px

.about-header
  background: transparent
  padding: 4rem 2rem 2rem
  text-align: center
  color: #1e293b // Slate-900

.about-title
  font-size: 3rem
  font-weight: 800
  letter-spacing: -0.02em
  margin: 0
  color: #0f172a
  // Removed text-shadow

.about-content
  padding: 2rem
  line-height: 1.9 // Increased for readability
  color: #475569 // Slate-600
  font-size: 1.05rem

  h1, h2, h3
    color: #1e293b
    margin-top: 3.5rem
    margin-bottom: 1.5rem
    font-weight: 600
    letter-spacing: -0.01em

  h1
    font-size: 2.25rem
    border-bottom: none // Removed border
    padding-bottom: 0

  h2
    font-size: 1.75rem
    position: relative
    padding-left: 0
    
    // Minimalist accent line
    &:after
      content: ''
      display: block
      width: 40px
      height: 2px
      background: #0f172a
      margin-top: 1rem

    &:before
      display: none

  ul
    list-style: none
    padding-left: 0
    margin-top: 1.5rem

    li
      padding-left: 1.5rem
      margin-bottom: 0.8rem
      position: relative
      color: #334155

      &:before
        content: '—' // Minimalist dashing
        position: absolute
        left: 0
        color: #94a3b8
        font-weight: normal

  p
    margin-bottom: 1.5rem
    color: #475569

  hr
    border: none
    border-top: 1px solid #f1f5f9
    margin: 4rem 0

// 二维码展示区域 - Clean Grid
.qrcode-section
  padding: 4rem 2rem
  background: #ffffff // Seamless background
  border-top: 1px solid #f8fafc

.section-title
  font-size: 1.5rem
  color: #0f172a
  text-align: center
  margin-bottom: 3rem
  font-weight: 600
  letter-spacing: -0.01em

.qrcode-grid
  display: grid
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr))
  gap: 3rem
  max-width: 800px
  margin: 0 auto

.qrcode-card
  background: #ffffff
  padding: 0
  text-align: center
  transition: transform 0.3s ease
  // Removed default shadow

  &:hover
    transform: translateY(-4px)

.qrcode-wrapper
  margin-bottom: 1.5rem
  display: inline-block
  padding: 1rem
  background: #fff
  border: 1px solid #e2e8f0
  border-radius: 12px

.qrcode-image
  width: 180px
  height: 180px
  display: block
  border-radius: 4px
  mix-blend-mode: multiply

.qrcode-info
  .icon
    vertical-align: middle
    margin-right: 0.5rem

.qrcode-title
  font-size: 1.1rem
  color: #1e293b
  margin-bottom: 0.5rem
  font-weight: 600

.qrcode-desc
  color: #64748b
  font-size: 0.9rem
  margin-bottom: 1rem

.qrcode-tip
  display: inline-block
  padding: 0.4rem 1.2rem
  background: #f1f5f9
  color: #475569
  border-radius: 9999px
  font-size: 0.8rem
  font-weight: 500
  letter-spacing: 0.02em

// 社交链接区域
.social-section
  padding: 2rem 2rem 4rem
  background: #fff

.social-links
  display: flex
  justify-content: center
  gap: 1rem
  flex-wrap: wrap

.social-link
  display: flex
  align-items: center
  gap: 0.6rem
  padding: 0.8rem 1.5rem
  background: #fff
  border: 1px solid #e2e8f0
  border-radius: 8px
  color: #475569
  text-decoration: none
  transition: all 0.2s ease
  font-weight: 500
  font-size: 0.95rem

  &:hover
    background: #0f172a
    border-color: #0f172a
    color: #fff
    transform: translateY(-1px)
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1)

.social-icon
  width: 20px
  height: 20px

// 响应式设计
@media (max-width: 768px)
  .about-page
    padding: 2rem 1rem

  .about-header
    padding: 2rem 1rem 1rem

  .about-title
    font-size: 2.25rem

  .about-content
    padding: 1rem
    font-size: 1rem

  .qrcode-grid
    gap: 2rem
    
  .social-links
    flex-direction: column
    width: 100%
    
  .social-link
    justify-content: center
    width: 100%
